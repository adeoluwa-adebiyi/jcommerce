<html>
<head>
    {% include "../user/libs.twig" %}
    <style>
        body{
            background-color: #f7f7f7;
        }

        .cell{
            height:150px;
        }
        .cell:hover{
            border: 1px solid #f7f7f7;
        }
        .nav-link{
            color: black !important;
        }
        .nav-link:hover{
            text-decoration: underline;
        }
        .shadow{
            box-shadow: 0px 0px 2px #cccccc;
        }
        .category-item{
            padding:10px;
            padding-left: 25px;
            margin:0px;
        }
        .category-item:hover{
            background-color: #f7f7f7;
        }
        .category{
            padding: 0px !important;
        }
        .card-header{
            background-color: #ffffff;
        }
        .card{
            border:none;
        }
    </style>
</head>

<body>
{% include "../user/nav.twig" %}

<div class="container" style="padding-bottom: 40px;">
    <div class="row" style="margin-top: 40px;">
        <div class="col-md-3 category shadow" style="height: 300px;overflow-y: auto;background-color: #ffffff;">
            <a style="display: block;" href="/admin/" class="category-item">Home</a>
            <a style="display: block;" href="/admin/products" class="category-item">Products</a>
            <a style="display: block;" href="#" class="category-item">Categories</a>
            <a style="display: block;" href="#" class="category-item">Revenue</a>
            <a style="display: block;" href="#" class="category-item">Deals</a>
            <a style="display: block;" href="#" class="category-item">Payment Gateways</a>
        </div>

        <div class="col-md-9" style="padding-left: 25px;">
            <div class="row">
                <div class="col">
                    <h1 style="margin-bottom: 40px;">Manage Product:<br>{{ product.name }}</h1>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="card shadow">
                        <div class="card-body">
                            <form style="padding:20px;" action="/admin/products/create" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="name">Name</label>
                                    <input name="name" type="text" value="{{ product.name }}" class="form-control" id="name">
                                </div>
                                <div class="form-group">
                                    <label for="price">Price</label>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">$</span>
                                        </div>
                                        <input name="price" type="text" class="form-control" id="price" value="{{ product.productPrice }}">
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label for="name">Image</label>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">*.png</span>
                                        </div>
                                        <input name="image" type="file" class="form-control" id="image">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="category">Category</label>
                                    <select id="category" class="form-control" name="category" value="{{ product.productCategory }}">
                                        <option value="Electronics">Electronics</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="description">Description</label>
                                    <textarea style="height: 300px;" name="description" class="form-control" id="description">
                                        {{ product.productDescription }}
                                    </textarea>
                                </div>
                                <input type="submit" class="btn btn-success" value="Submit">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
</body>
</html>