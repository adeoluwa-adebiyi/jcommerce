<html>
<head>
    {% include "libs.twig" %}
    <style>
        body{
            background-color: #f7f7f7;
        }

        .cell{
            height:150px;
        }
        .cell:hover{
            border: 1px solid #ccc;
        }
        .nav-link{
            color: black !important;
        }
        .nav-link:hover{
            text-decoration: underline;
        }
        .shadow{
            box-shadow: 0px 0px 2px #cccccc;
        }
        .category-item{
            padding:10px;
            padding-left: 25px;
            margin:0px;
        }
        .category-item:hover{
            background-color: #f7f7f7;
        }
        .category{
            padding: 0px !important;
        }
        .card-header{
            background-color: #ffffff;
        }
        .card{
            border:none;
        }
        .item-box{
            display: grid;grid-template-columns: 1fr 1fr 1fr 1fr;grid-auto-rows: auto;
            padding: 20px;
        }
        .item{
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding:10px;
            align-items: center;
            box-sizing: border-box;
        }
        .naira{
            text-decoration: line-through;
        }
        .item:hover{
            box-shadow: 0px 0px 2px #ccc;
        }
        @media screen and (max-width: 500px){
            .item-box{
                display: grid;
                grid-template-columns: 1fr 1fr;
            }
        }
        .uppercase{
            text-transform: uppercase;
        }
    </style>
</head>

<body>
{% include "nav.twig" %}

<div class="container" style="padding-bottom: 40px;">
    <div class="row">
        <div class="col">
            <h1 style="margin-top: 30px;margin-bottom: 20px;">{{ category.name }}</h1>
        </div>
    </div>
    <div class="row" style="margin-top:40px;flex-wrap: nowrap;">
        <div class="col" style="">
            <div class="row">
                <div class="col" style="height: 150px;">
                    <div class="shadow" style="height: 100%;background-color: #721c24;"></div>
                </div>
            </div>

        </div>
    </div>

    <div class="row" style="margin-top: 30px;">
        <div class="col">
            <div class="card shadow">
                <p class="card-header uppercase">Featured Products</p>
                <div class="card-body" style="padding: 0px;">
                    <div class="item-box">
                        {% for product in products %}
                        <div class="item">
                            <a href="/product/{{ product.id }}" style="text-decoration: none;color:#000000;display: flex;flex-direction: column;justify-content: flex-start;">
                                <img width="160" height="160" src="{{ product.image }}" style="margin: 0 auto;">
                                <p class="uppercase" style="font-size: 13px;font-weight: bold;padding:0px;">{{ product.name }}</p>
                                {#<p style="font-size: 13px;padding:0px;">{{ product.description }}</p>#}
                                <p style="font-size: 12px;font-weight: bold;color:crimson"><span class="naira">N</span>&nbsp;{{ product.price }}</p>
                            </a>
                        </div>
                        {% endfor %}
                    </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
</body>
</html>